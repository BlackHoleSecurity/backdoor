# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org

# PHP PSR-2 Coding Standards
# http://www.php-fig.org/psr/psr-2/

root = true

[*]
end_of_line = lf
insert_final_newline = true

[*.{php, py, cpp, cc, hpp, hh, c, h}]
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{js, html, css, twig, json, yaml}]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true

[Makefile]
indent_style = tab

[*.md]
trim_trailing_whitespace = false
